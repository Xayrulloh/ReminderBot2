{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "lib": [
      "ESNext"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "removeComments": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "**/*.int-spec.ts",
    "**/*.e2e-spec.ts",
  ]
}